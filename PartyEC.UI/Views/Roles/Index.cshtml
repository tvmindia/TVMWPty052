@model PartyEC.UI.Models.RoleViewModel

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
   
   
}
<div class="container-fluid">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li id="tabRoleList" class="active"><a href="#RoleList" data-toggle="tab"><i class="fa fa-list">&nbsp;</i> Role List</a></li>
            </ul>
        </div>

        <div class="panel-body" style="min-height:580px;padding:0;">
            <div class="tab-content">

                <div class="tab-pane fade in active" id="RoleList" style="padding:1%;">
                    @*table*@
                    <table id="tblRoles" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th>USerID</th>
                                <th>User Name</th>
                                <th>Role</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                    @*table*@
                </div>
             

            </div>
        </div>

    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/datatable")
  
}