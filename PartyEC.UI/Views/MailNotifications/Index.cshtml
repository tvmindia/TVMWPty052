@model PartyEC.UI.Models.MailNotificationViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
    @Styles.Render("~/Content/DataTables/css/datatableSelect")
    @Styles.Render("~/Content/UserCSS/Mailnotifications")
}



<div class="container-fluid" style="min-height:950px;">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li id="tabNotificationsList" class="active"><a href="#NotificationList" data-toggle="tab">Notifications List</a></li>
                <li id="tabNotificationsDetails"><a href="#NotificationDetail" data-toggle="tab">Notification Detail</a></li>
            </ul>
        </div>

        <div class="panel-body">
            <div class="tab-content">

                <div class="tab-pane fade in active" id="NotificationList">

                    @*ButtonPatch*@
                    <div id="NotificationToolBox">
                        @{
                            PartyEC.UI.Models.ToolboxViewModel ToolBoxControl = new PartyEC.UI.Models.ToolboxViewModel();
                            ToolBoxControl.addbtn.Visible = true;
                            ToolBoxControl.addbtn.Title = "Add";
                            ToolBoxControl.addbtn.Event = "AddNotification()";

                            Html.RenderPartial("_ToolboxView", ToolBoxControl);
                        }
                    </div>
                    <div id="external_filter" class="form-inline">
                        <label><b>Date From</b></label>
                        <input class="form-control datepicker" onchange="countDays()" style="width:190px" name="fromdate" id="fromdate" type="Date">
                        <label><b>To Date</b> </label>
                        <input class="form-control datepicker" onchange="countDays()" style="width:190px" name="todate" id="todate" type="Date">
                        <label id="dayscount" style="padding-left:10px"></label>
                        <b><a href="#" style="padding-left:10px" onclick="GetAllNotifications()"> APPLY</a></b>
                    </div>
                    @*table*@
                    <table id="tblMailNotifications" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th>CustomerID</th>
                                <th>Notification ID</th>
                                <th>Customer Name</th>
                                <th>Title</th>
                                <th>Message</th>
                                <th>Notification Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                    @*table*@
                </div>
                <div class="tab-pane fade" id="NotificationDetail">
                    <div class="col-lg-2">
                        <div class="panel with-nav-tabs js panel-primary">
                            <div class="panel-heading">
                                <ul class="nav nav-tabs nav-stacked" id="LHSNavbarNotification">
                                    <li onclick="" class="active"><a href="#sendNotific" data-toggle="tab" id="tabNotifi">Notification</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="tab-content productTabContent">
                            <div class="tab-pane fade in active" id="sendNotific">
                                <div class="container-fluid">
                                    <div class="row">

                                        <div class="radioBox">
                                            <label class="radio-inline">
                                                <input type="radio" onchange="SelectCustomerTable(this)" name="RadioSelect" id="RadioAll" value="All"> All
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" onchange="SelectCustomerTable(this)" name="RadioSelect" id="RadioSelected" checked="" value="Selected"> Selected
                                            </label>
                                        </div>
                                        @*ButtonPatch*@
                                        <div id="NotificationPushToolbox">
                                            @{
                                                PartyEC.UI.Models.ToolboxViewModel ToolBoxControlNoti = new PartyEC.UI.Models.ToolboxViewModel();
                                                ToolBoxControlNoti.sendbtn.Visible = true;
                                                ToolBoxControlNoti.sendbtn.Title = "Save";
                                                ToolBoxControlNoti.sendbtn.Event = "PushNotification()";
                                                ToolBoxControlNoti.sendbtn.Disable = true;
                                                ToolBoxControlNoti.backbtn.Visible = true;
                                                ToolBoxControlNoti.backbtn.Title = "Back";
                                                ToolBoxControlNoti.backbtn.Event = "goback()";
                                                Html.RenderPartial("_ToolboxView", ToolBoxControlNoti);
                                            }
                                        </div>
                                        @*table*@
                                        <table id="tblCustomersInNotificatoin" class="table table-striped table-bordered table-hover" width="100%">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th>Customer Name</th>
                                                    <th>Email</th>
                                                    <th>Address</th>
                                                    <th>CustomerID</th>

                                                </tr>
                                            </thead>
                                        </table>
                                        @*table*@
                                    </div>
                                </div>
                                <div class="container-fluid">
                                    <div class="row">
                                        @using (Ajax.BeginForm("MailNotificationPush", "MailNotifications", new AjaxOptions { HttpMethod = "POST", OnSuccess = "NotificationPushSuccess", Confirm = "Push Notifications!Are You Sure?", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", id = "NotificationForm" }))

                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="form-group">
                                                <label class="control-label col-md-4" for="Name">Customer Name</label>
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return false;" } })
                                                    @Html.HiddenFor(model => model.customer.ID)
                                                    @Html.HiddenFor(model => model.CustomerIDList)
                                                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4" for="Title">Title</label>
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.HiddenFor(model => model.Type, new { @Value = "Email" })
                                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4" for="Message">Message</label>
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                                </div>
                                            </div>


                                            <div class="form-group" hidden="hidden">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input id="btnNotificationSubmit" type="submit" onclick="ConstructMultiCustomersList()" value="Create" class="btn btn-default" />
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>



                </div>

            </div>
        </div>

    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/datatableSelect")
    @Scripts.Render("~/bundles/jqueryunobtrusiveajaxvalidate")
    @Scripts.Render("~/bundles/Mailnotifications")
}


