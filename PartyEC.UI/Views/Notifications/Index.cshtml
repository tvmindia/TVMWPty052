@model PartyEC.UI.Models.NotifiationViewModel

@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
    @Styles.Render("~/Content/DataTables/css/datatableSelect")
    @Styles.Render("~/Content/UserCSS/Notifications")
}

<div class="container-fluid" style="min-height:950px;">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li id="tabNotificationsList" class="active"><a href="#NotificationList" data-toggle="tab">Notifications List</a></li>
                <li id="tabNotificationsDetails"><a href="#NotificationDetail" data-toggle="tab">Notification Detail</a></li>
            </ul>
        </div>

        <div class="panel-body">
            <div class="tab-content">

                <div class="tab-pane fade in active" id="NotificationList">
                 
                            @*table*@
                            <table id="tblNotifications" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>

                                        <th>Notification ID</th>
                                        <th>Customer Name</th>
                                        <th>Title</th>
                                        <th>Message</th>
                                        <th>Notification Date</th>
                                        <th>Actions</th>
                                       
                                    </tr>
                                </thead>
                            </table>
                            @*table*@
               </div>
                <div class="tab-pane fade" id="NotificationDetail">
                    <div class="col-lg-2">
                        <div class="panel with-nav-tabs js panel-primary">
                            <div class="panel-heading">
                                <ul class="nav nav-tabs nav-stacked" id="LHSNavbarNotification">
                                    <li onclick="" class="active"><a href="#sendNotific" data-toggle="tab" id="tabNotifi">Notification</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="tab-content productTabContent">
                            <div class="tab-pane fade in active" id="sendNotific">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="radioBox">
                                            <label class="radio-inline">
                                                <input type="radio" onchange="SelectCustomerTable(this)"  name="RadioSelect" id="RadioAll" value="All"> All
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" onchange="SelectCustomerTable(this)"  name="RadioSelect" id="RadioSelected" value="Selected"> Selected
                                            </label>
                                        </div>

                                        @*table*@
                                        <table id="tblCustomersInNotificatoin" class="table table-striped table-bordered table-hover" width="100%">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th>Customer Name</th>
                                                    <th>Mobile</th>
                                                    <th>Address</th>
                                                   
                                                </tr>
                                            </thead>
                                        </table>
                                        @*table*@
                                    </div>
                                </div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="form-horizontal">
                                            <div class="form-group">
                                                <label class="control-label col-md-4" for="Name">Customer Name</label>
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.customer.Name, new { htmlAttributes = new { @class = "form-control" } })

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4" for="Title">Title</label>
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4" for="Message">Message</label>
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>

                          
                        </div>
                 


                </div>

                </div>
        </div>

            </div>
        </div>


        @section Scripts {
            @Scripts.Render("~/bundles/datatable")
            @Scripts.Render("~/bundles/datatableSelect")
            @Scripts.Render("~/bundles/jqueryunobtrusiveajaxvalidate")
            @Scripts.Render("~/bundles/Notifications")
        }


