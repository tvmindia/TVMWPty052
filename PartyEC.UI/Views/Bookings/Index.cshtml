@model PartyEC.UI.Models.BookingsViewModel
@using PartyEC.UI.App_Start
@{
    ViewBag.Title = "Bookings";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion,"~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion,"~/Content/bootstrapdatepicker")
}


<div class="container-fluid">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#Tab1" id="tabBookingsList" onclick="tabListClick()" data-toggle="tab"><i class="fa fa-list">&nbsp;</i> Bookings List</a></li>
                <li id="tabBookingsDetails" class="disabled"><a href="#Tab2"><i class="fa fa-file-o">&nbsp;</i> Bookings Details</a></li>
                @*<li id="tabBookingsDetails" ><a  data-toggle="tab" href="#Tab2"><i class="fa fa-file-o">&nbsp;</i> Bookings Details</a></li>*@
                <div class="" id="btnPatchBookings">

                    @*Here the Buttons should Paint as Partial View*@

                </div>
            </ul>
        </div>
        <div class="panel-body" style="min-height:550px;padding:0;">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="Tab1" style="padding:1%;">
                    @*table*@
                    <table id="tblBookingsList" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Bookings No</th>
                                <th>Bookings Date</th>
                                <th>Customer Name</th>
                                <th>Contact No</th>
                                <th>Required Date</th>
                                <th>Bookings Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                    @*table*@
                </div>
                <div class="tab-pane fade" id="Tab2">
                    <div class="col-md-12" style="padding:0;" id="BookingsDetails">
                        <div class="col-md-2" style="padding:0;">
                            <ul class="nav nav-tabs nav-stacked Sidebar_Party" style="min-height:1285px;">
                                <li class="liHead"><a disabled>&nbsp;</a></li>
                                <li class="active"><a href="#BookingRegion" data-toggle="tab" id="tabGeneral">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;General</a></li>
                                <li onclick="TabActionInvoiceRegion()"><a href="#InvoiceRegion" data-toggle="tab" id="tabInvoiceRegion">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Invoice</a></li>
                            </ul>
                        </div>
                        <div class="col-md-9">
                            <div class="tab-content OrderTabContent">
                                <div class="tab-pane fade in active col-md-12" id="BookingRegion">
                                    <h4 style="max-width:50%;padding:1%"><span class="fa fa-bfa fa-shopping-cart" style="font-size: 16px;color:#f46f25;"></span><span> </span><span class="Spantitle">Booking Information</span></h4>
                                    <hr />
                                    <div class="col-md-6">
                                        <div class="infoBox panel panel-default" style="min-height:250px">
                                            <div class="infoBoxHeader panel-heading">General</div>
                                            <div class="panel-body">

                                                @*BookingsId*@
                                                @Html.HiddenFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-4" })
                                                @Html.HiddenFor(model => model.ProductName, htmlAttributes: new { @class = "control-label col-md-4" })

                                                <div class="col-md-12"> </div>
                                                @Html.LabelFor(model => model.BookingNo, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    <label id="lblBookingNo" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.BookingDate, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    <label id="lblBookingDate" class="h5 label-display">-</label>
                                                </div>

                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.RequiredDate, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    <label id="lblRequiredDate" class="h5 label-display">-</label>
                                                </div>

                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.SourceIP, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    <label id="lblSourceIP" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"> </div>
                                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    <label id="lblBookingstatus" class="h5 label-display">-</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="infoBox panel panel-default" style="min-height:250px">
                                            <div class="infoBoxHeader panel-heading">Account Information</div>
                                            <div class="panel-body">
                                                <div class="col-md-12">
                                                    <img src="~/Content/images/Person1.png" id="imgPreviewCustomer" />
                                                </div>
                                                <br />
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.customerObj.Name, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblCustomerName" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.customerObj.Mobile, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblContactNo" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.customerObj.Email, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblCustomerEmail" class="h5 label-display">-</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="infoBox panel panel-default" style="min-height:200px">
                                            <div class="infoBoxHeader panel-heading">Bookings Item Details</div>
                                            <div class="panel-body">
                                                <table id="tblBookingsItemDetail" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>ProductID</th>
                                                            <th>Product</th>
                                                            <th>Item Status</th>
                                                            <th>Qty</th>
                                                            <th>Price</th>
                                                            <th>Sub Total</th>
                                                            <th>Tax Amount</th>
                                                            <th>Discount</th>
                                                            <th>Total</th>
                                                        </tr>
                                                    </thead>
                                                </table>
                                                @Html.HiddenFor(model => model.Qty, htmlAttributes: new { @class = "control-label col-md-4" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="infoBox panel panel-default" style="min-height:270px">
                                            <div class="infoBoxHeader panel-heading">Customer Message</div>
                                            <div class="panel-body">
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblMessage" class="h5 label-display">-</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="infoBox panel panel-default" style="min-height:270px">
                                            <div class="infoBoxHeader panel-heading">Bookings Details</div>
                                            <div class="panel-body">
                                                @using (Ajax.BeginForm("UpdateBookings", "Bookings", new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccess", OnFailure = "NetworkFailure", AllowCache = false, OnComplete = "" }, new { @class = "form-horizontal", role = "form", id = "formGeneral" }))
                                            {
                                            @Html.AntiForgeryToken()
                                            <div class="col-md-12"></div>
                                            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "h5 col-md-5" })
                                            <div class="col-md-7">
                                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", style = "text-align:right;" } })
                                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-12"></div>
                                            @Html.LabelFor(model => model.TaxAmt, htmlAttributes: new { @class = "h5 col-md-5" })
                                            <div class="col-md-7">
                                                @Html.EditorFor(model => model.TaxAmt, new { htmlAttributes = new { @class = "form-control", style = "text-align:right;" } })
                                                @Html.ValidationMessageFor(model => model.TaxAmt, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-12"></div>
                                            @Html.LabelFor(model => model.AdditionalCharges, htmlAttributes: new { @class = "h5 col-md-5" })
                                            <div class="col-md-7">
                                                @Html.EditorFor(model => model.AdditionalCharges, new { htmlAttributes = new { @class = "form-control", style = "text-align:right;" } })
                                                @Html.ValidationMessageFor(model => model.AdditionalCharges, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-12"></div>
                                            @Html.LabelFor(model => model.DiscountAmt, htmlAttributes: new { @class = "h5 col-md-5" })
                                            <div class="col-md-7">
                                                @Html.EditorFor(model => model.DiscountAmt, new { htmlAttributes = new { @class = "form-control", style = "text-align:right;" } })
                                                @Html.ValidationMessageFor(model => model.DiscountAmt, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-12"> </div>
                                            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "h5 col-md-5" })
                                            <div class="col-md-7">
                                                @Html.DropDownListFor(model => model.Status, Model.BookingsstatusList, new { @class = "form-control eventstatus" })
                                            </div>
                                            <div class="col-md-12"><br /></div>
                                            <div class="col-md-5">
                                            </div>
                                            <div class="col-md-7">
                                                @Html.HiddenFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-4", id = "BookingId" })
                                                <input type="submit" id="BtnSave" value="Save Changes" class="btn btn-info btn-right" style="float:right;" />
                                            </div>
                                            }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        @using (Ajax.BeginForm("InsertEventsLog", "Bookings", new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccess", OnFailure = "NetworkFailure", AllowCache = false, OnComplete = "" }, new { @class = "form-horizontal", role = "form", id = "formComments" }))
                                    {
                                    @Html.AntiForgeryToken()
                                    <div class="infoBox panel panel-default" style="min-height:300px">
                                        <div class="infoBoxHeader panel-heading">Order Comments</div>
                                        <div class="panel-body">
                                            <div class="form-group col-md-12">
                                                @Html.LabelFor(model => model.EventsLogViewObj.Comment, htmlAttributes: new { @class = "control-label col-md-6" })
                                                <div class="col-md-12">
                                                    @Html.TextAreaFor(model => model.EventsLogViewObj.Comment, new { @class = "form-control", id = "Comments", style = "width:100%; height: 100px;" })
                                                    @Html.ValidationMessageFor(model => model.EventsLogViewObj.Comment, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-12"></div>
                                            <div class="col-md-12">
                                                @Html.LabelFor(model => model.EventsLogViewObj.CustomerNotifiedYN, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-lg-2">
                                                    <div class="checkbox">
                                                        <div>
                                                            @Html.EditorFor(model => model.EventsLogViewObj.CustomerNotifiedYN)
                                                            @Html.ValidationMessageFor(model => model.EventsLogViewObj.CustomerNotifiedYN, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    @Html.HiddenFor(model => model.BookingNo, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    @Html.HiddenFor(model => model.EventsLogViewObj.ParentType, htmlAttributes: new { @class = "control-label col-md-4", Value = "Bookings" })
                                                    @Html.HiddenFor(model => model.EventsLogViewObj.ParentID, htmlAttributes: new { @class = "control-label col-md-4", Value = 0 })
                                                    @Html.HiddenFor(model => model.mailViewModelObj.CustomerEmail, htmlAttributes: new { @class = "control-label col-md-4", Value = "" })
                                                    @Html.HiddenFor(model => model.mailViewModelObj.CustomerName, htmlAttributes: new { @class = "control-label col-md-4", Value = "" })
                                                    <input type="submit" value="Submit Comment" class="btn btn-info btn-right" style="float:right;" />
                                                </div>
                                            </div>
                                            <div class="col-md-12"></div>
                                            <div class="form-group col-md-12">
                                                <label id="lblHistroy" class="control-label" style="font-size:14px;margin-left:1%">Earlier Comments</label>

                                                <div style="height: 150px;width: 107%;overflow: hidden;position: relative;">
                                                    <div id="CommentsDisplay" style="max-height: 150px;min-height: 150px;overflow-x: hidden;position: absolute;top: 0px;bottom: 0px;left: 0px;right: -15px;white-space: pre;">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                    </div>
                                    <div class="col-md-6">
                                        <div class="infoBox panel panel-default" style="min-height:250px">
                                            <div class="infoBoxHeader panel-heading">Bookings Summary</div>
                                            <div class="panel-body">
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.SubTotal, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblSubTotal" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.TaxAmt, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblTaxAmt" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.AdditionalCharges, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblAdditionalCharges" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.DiscountAmt, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblDiscountAmt" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"><hr></div>
                                                @Html.LabelFor(model => model.GrandTotal, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblGrandTotal" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade col-md-12" id="InvoiceRegion">
                                    <h4 style="max-width:50%;padding:1%"><span class="fa fa-bfa fa-shopping-cart" style="font-size: 16px;color:#f46f25;"></span><span> </span><span class="Spantitle">Invoice Booking</span></h4>
                                    <hr />
                                    <div class="col-md-6">
                                        <div class="infoBox panel panel-default" style="min-height:250px">
                                            <div class="infoBoxHeader panel-heading">General</div>
                                            <div class="panel-body">
                                                @Html.LabelFor(model => model.BookingNo, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblBookingNoInvoiceRegion" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.BookingDate, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblBookingDateInvoiceRegion" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.RequiredDate, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblRequiredDateInvoiceRegion" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.SourceIP, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblSourceIPInvoiceRegion" class="h5 label-display">-</label>
                                                </div>
                                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblStatusInvoiceRegion" class="h5 label-display">-</label>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="infoBox panel panel-default" style="min-height:250px">
                                            <div class="infoBoxHeader panel-heading">Account Information</div>
                                            <div class="panel-body">
                                                <div class="col-md-12">
                                                    <img src="~/Content/images/Person1.png" id="imgPreviewCustomerInvoiceRegion" />
                                                </div>
                                                <div class="col-md-12"></div>
                                               @Html.LabelFor(model => model.customerObj.Name, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblCustomerNameInvoiceRegion" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.customerObj.Mobile, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblContactNoInvoiceRegion" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                               @Html.LabelFor(model => model.customerObj.Email, htmlAttributes: new { @class = "h5 col-md-4" })
                                                <div class="col-md-8">
                                                    @*style="font-weight:bold"*@
                                                    <label id="lblCustomerEmailInvoiceRegion" class="h5 label-display">-</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                   
                                    <div class="col-md-12">
                                        <h3>Order Items</h3>
                                        <hr />
                                        <table id="tblBookingDetailsInvoiceRegion" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>ProductID</th>
                                                    <th>Product</th>
                                                    <th>Item Status</th>
                                                    <th>Qty</th>
                                                    <th>Price</th>
                                                    <th>Sub Total</th>
                                                    <th>Tax Amount</th>
                                                    <th>Discount</th>
                                                    <th>Total</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                    <div class="col-md-6"></div>
                                    <div class="col-md-6">
                                        <div class="infoBox panel panel-default" style="min-height:250px">
                                            <div class="infoBoxHeader panel-heading">Bookings Summary</div>
                                            <div class="panel-body">
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.SubTotal, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblInvoiceSubTotal" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.TaxAmt, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblInvoiceTaxAmt" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.AdditionalCharges, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblInvoiceAdditionalCharges" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"></div>
                                                @Html.LabelFor(model => model.DiscountAmt, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblInvoiceDiscountAmt" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                                <div class="col-md-12"><hr></div>
                                                @Html.LabelFor(model => model.GrandTotal, htmlAttributes: new { @class = "h5 col-md-10", style = "font-weight:bold" })
                                                <div class="col-md-2" align="right">
                                                    <label id="lblInvoiceGrandTotal" style="font-weight:bold" class="h5 label-display">-</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                              </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/jqueryunobtrusiveajaxvalidate")   
    @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/Bookings")
}


