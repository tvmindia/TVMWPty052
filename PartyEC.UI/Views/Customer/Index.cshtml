
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
    @Styles.Render("~/Content/UserCSS/customer")
 }

<div class="container-fluid" style="min-height:950px;">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li  id="tabcustomerList" class="active"><a href="#customerList" data-toggle="tab">Customer List</a></li>
                <li id="tabcustomerView"><a data-toggle="tab" href="#customerView">Customer View</a></li>
            </ul>
        </div>
        <div class="panel-body">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="customerList">

                 

                    @*table*@
                    <table id="tblCustomers" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Customer ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Language</th>
                                <th>Gender</th>
                                <th>Current Orders</th>
                                <th>Current Bookings</th>
                                <th>Current Quotations</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                    @*table*@
                    <div class="form-group" hidden="hidden">
                        <button id="btnmodelproductrating" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#ModelProductsRating"></button>
                    </div>
                </div>
                <div class="tab-pane fade" id="customerView">

                    <h4>Customer View</h4>


                    @*ButtonPatch*@
                    <div class="" id="">
                        @{
                            PartyEC.UI.Models.ToolboxViewModel ToolBoxControlDetail = new PartyEC.UI.Models.ToolboxViewModel();
                            ToolBoxControlDetail.savebtn.Visible = true;
                            ToolBoxControlDetail.savebtn.Title = "Save";
                            ToolBoxControlDetail.savebtn.Event = "ProductSave()";
                            //ToolBoxControlDetail.deletebtn.Visible = true;
                            //ToolBoxControlDetail.deletebtn.Disable = true;
                            ToolBoxControlDetail.backbtn.Visible = true;
                            ToolBoxControlDetail.backbtn.Title = "Back";
                            ToolBoxControlDetail.backbtn.Event = "goback()";
                            Html.RenderPartial("_ToolboxView", ToolBoxControlDetail);
                        }

                    </div>
                    <div class="col-lg-12">
                        <hr />
                    </div>
                    @*EditArea*@
                    <div class="col-md-2">
                        <div class="panel with-nav-tabs js panel-primary">
                            <div class="panel-heading">
                                <ul class="nav nav-tabs nav-stacked" id="LHSNavbarCustomers">
                                    <li id="customerViewLI" onclick="ShowProductDetalsToolBox()" class="active"><a href="#tabCustomerView" data-toggle="tab" id="tabCustomerView">Customer View</a></li>
                                    <li onclick="RenderContentForPrice()"><a href="#tabAddress" data-toggle="tab" id="tabcustomerAddress">Addresses</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-10">
                       
                            <div class="tab-content customerTabContent">
                                <div class="tab-pane fade in active" id="tabCustomerView">
                                    <!--Edit form column-->

                                    custemer view
                                 


                                </div>
                                <div class="tab-pane fade" id="tabAddress">
                                   
                                    address
                                </div>
                               
                              
                            </div>
                           
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/customer")
}