
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
    @Styles.Render("~/Content/UserCSS/customer")
 }

<div class="container-fluid" style="min-height:950px;">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li  id="tabcustomerList" class="active"><a href="#customerListContent" data-toggle="tab">Customer List</a></li>
                <li id="tabcustomerView"><a data-toggle="tab" href="#customerViewContent">Customer View</a></li>
            </ul>
        </div>
        <div class="panel-body">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="customerListContent">

                 

                    @*table*@
                    <table id="tblCustomers" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Customer ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Language</th>
                                <th>Gender</th>
                                <th>Current Orders</th>
                                <th>Current Bookings</th>
                                <th>Current Quotations</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                    @*table*@
                    <div class="form-group" hidden="hidden">
                        <button id="btnmodelproductrating" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#ModelProductsRating"></button>
                    </div>
                </div>
                <div class="tab-pane fade" id="customerViewContent">

                    <h4>Customer View</h4>


                    @*ButtonPatch*@
                    <div>
                        @{
                            PartyEC.UI.Models.ToolboxViewModel ToolBoxControlDetail = new PartyEC.UI.Models.ToolboxViewModel();
                            ToolBoxControlDetail.savebtn.Visible = true;
                            ToolBoxControlDetail.savebtn.Title = "Save";
                            ToolBoxControlDetail.savebtn.Event = "ProductSave()";
                            //ToolBoxControlDetail.deletebtn.Visible = true;
                            //ToolBoxControlDetail.deletebtn.Disable = true;
                            ToolBoxControlDetail.backbtn.Visible = true;
                            ToolBoxControlDetail.backbtn.Title = "Back";
                            ToolBoxControlDetail.backbtn.Event = "goback()";
                            Html.RenderPartial("_ToolboxView", ToolBoxControlDetail);
                        }

                    </div>
                    <div class="col-lg-12">
                        <hr />
                    </div>
                    @*EditArea*@
                    <div class="col-md-2">
                        <div class="panel with-nav-tabs js panel-primary">
                            <div class="panel-heading">
                                <ul class="nav nav-tabs nav-stacked" id="LHSNavbarCustomers">
                                    <li id="customerViewLI" onclick="return true;" class="active"><a href="#CustomerView" data-toggle="tab" id="tabCustomerView">Customer View</a></li>
                                    <li onclick="return true;"><a href="#AddressView" data-toggle="tab" id="tabcustomerAddress">Addresses</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-10">
                       
                            <div class="tab-content customerTabContent">
                                <div class="tab-pane fade in active" id="CustomerView">
                                    <!--Edit form column-->

                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading"><strong>Personal Information</strong></div>
                                                    <div class="panel-body">
                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Customer Name</label>
                                                            <div class="col-md-8">
                                                                <label id="lblCustName" class="h4 label-display">-</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Account Created On</label>
                                                            <div class="col-md-8">
                                                                <label id="lblCustAccCreate" class="h4 label-display">-</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Email</label>
                                                            <div class="col-md-8">
                                                                <label id="lblEmail" class="h4 label-display">-</label>

                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Mobile</label>
                                                            <div class="col-md-8">
                                                                <label id="lblCustMobile" class="h4 label-display">-</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Gender</label>
                                                            <div class="col-md-8">
                                                                <label id="lblCustGender" class="h4 label-display">-</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Is Active</label>
                                                            <div class="col-md-8">
                                                                <label id="lblCustActive" class="h4 label-display">-</label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Default Address</label>
                                                            <div class="col-md-8 h4">
                                                                <address>
                                                                   
                                                                </address>
                                                        
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading"><strong>Sales Statistics</strong></div>
                                                    <div class="panel-body">

                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Lifetime Sales</label>
                                                            <div class="col-md-8">
                                                                <label id="lblLifeSales" class="h4 label-display">-</label>
                                                            </div>
                                                        </div>

                                                        

                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Average Sale</label>
                                                            <div class="col-md-8">
                                                                <label id="lblAverageSales" class="h4 label-display">-</label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-12">
                                                            <label class="h4 col-md-4">Last Month Sale</label>
                                                            <div class="col-md-8">
                                                                <label id="lblLastSale" class="h4 label-display">-</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div>
                                    <br />
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="panel panel-default">
                                                <div class="panel-heading"><strong>Recent Orders</strong></div>
                                                <table id="tblOrderSummary" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr>
                                                         <th>Order No</th>
                                                         <th>Order Date</th>
                                                         <th>Bill To Name</th>
                                                         <th>Ship To Name</th>
                                                         <th>Order Total</th>
                                                         </tr>
                                                    </thead>
                                                 </table>
                                            </div>
                                        </div>
                                        </div>
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="panel panel-default">
                                                <div class="panel-heading"><strong>Shopping Cart</strong></div>
                                                <table id="tblCart" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr> 
                                                        <th>Product ID</th>
                                                        <th>Product Name</th>
                                                        <th>Qty</th>
                                                        <th>Price</th>
                                                        <th>Total</th>
                                                       </tr>
                                                    </thead>
                                                    
                                                </table>
                                            </div>
                                        </div>
                                    
                                    </div>
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="panel panel-default">
                                                <div class="panel-heading"><strong>Wishlist</strong></div>
                                                <table id="tblWishlist" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr>
                                                         <th>Product ID</th>
                                                         <th>Product Name</th>
                                                         <th>Date Added</th>
                                                         <th>Days In Wishlist</th>
                                                        </tr>
                                                    </thead>
                                                    
                                                </table>
                                            </div>
                                        </div>
                                     
                                    </div>
                                    </div>
                                <div class="tab-pane fade" id="AddressView">
                                   
                                    address
                                </div>
                               
                              
                            </div>
                           
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/customer")
}