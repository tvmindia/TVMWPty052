@model PartyEC.UI.Models.CustomerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
    @Styles.Render("~/Content/UserCSS/customer")
 }

<div class="container-fluid">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li id="tabcustomerList" class="active" ><a href="#customerListContent" onclick="CustomerListClick();" data-toggle="tab"><i class="fa fa-list">&nbsp;</i>Customer List</a></li>
                <li id="tabcustomerView"><a data-toggle="tab" href="#customerViewContent"><i class="fa fa-file-o">&nbsp;</i>Customer View</a></li>
                <div id="customerToolBox">

                </div>
            </ul>
        </div>
        <div class="panel-body" style="padding:0;min-height:550px;">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="customerListContent" style="padding:1%;">

                 <div class="container-fluid">
                     <div class="row">
                         @*table*@
                         <table id="tblCustomers" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                             <thead>
                                 <tr>

                                     <th>Customer ID</th>
                                     <th>Name</th>
                                     <th>Email</th>
                                     <th>Mobile</th>
                                     <th>Language</th>
                                     <th>Gender</th>
                                     <th>Current Orders</th>
                                     <th>Current Bookings</th>
                                     <th>Current Quotations</th>
                                     <th>Actions</th>
                                     <th>IsActive</th>
                                 </tr>
                             </thead>
                         </table>
                         @*table*@
                     </div>
                 </div>

                
                    <div class="form-group" hidden="hidden">
                        <button id="btnmodelproductrating" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#ModelProductsRating"></button>
                    </div>
                </div>
                <div class="tab-pane fade" id="customerViewContent">

                  


                    @*ButtonPatch*@
             
                    @*EditArea*@
                    <div class="col-md-2" style="padding:0;">
                        @* left hand side Tab  *@

                        <div class="col-md-12 " style="padding:0;">
                            <ul class="nav nav-tabs nav-stacked Sidebar_Party" style="min-height:1050px;">
                                <li class="liHead"><a disabled>&nbsp;</a></li>
                                <li class="active" id="customerViewLI" onclick="CustomerViewClick()"><a href="#CustomerView" data-toggle="tab" id="tabCustomerView">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Customer View </a></li>
                                <li><a href="#AddressView" data-toggle="tab" id="tabcustomerAddress">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Addresses </a></li>
                            </ul>

                        </div>
                    

                    </div>

                    <div class="col-md-10">
                       
                            <div class="tab-content customerTabContent">
                                <div class="tab-pane fade in active" id="CustomerView">
                                    <!--Edit form column-->
                                    <h4 style="max-width:50%;padding:1%;"><span class="fa fa-crosshairs" style="font-size: 16px;color: #f46f25;"></span><span> </span><span class="Spantitle">Customer View</span></h4>
                                    <hr />
                                    <div class="col-md-12">
                                        <div class="col-md-6" >
                                            <div class="infoBox panel panel-default" style="min-height:350px;">
                                                <div class="infoBoxHeader panel-heading"><strong>Personal Information</strong></div>
                                                <div class="panel-body">
                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Customer Name</label>
                                                        <div class="col-md-8">
                                                            <label id="lblCustName" class="h5 label-display">-</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Account Created On</label>
                                                        <div class="col-md-8">
                                                            <label id="lblCustAccCreate" class="h5 label-display">-</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Email</label>
                                                        <div class="col-md-8">
                                                            <label id="lblEmail" class="h5 label-display">-</label>

                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Mobile</label>
                                                        <div class="col-md-8">
                                                            <label id="lblCustMobile" class="h5 label-display">-</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Gender</label>
                                                        <div class="col-md-8">
                                                            <label id="lblCustGender" class="h5 label-display">-</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Is Active</label>
                                                        <div class="col-md-8">
                                                            <label id="lblCustActive" class="h5 label-display">-</label>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Default Address</label>
                                                        <div class="col-md-8 h5">
                                                            <address>

                                                            </address>

                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6" >
                                            <div class="infoBox panel panel-default" style="min-height:350px;">
                                                <div class="infoBoxHeader panel-heading"><strong>Sales Statistics</strong></div>
                                                <div class="panel-body">

                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Lifetime Sales</label>
                                                        <div class="col-md-8">
                                                            <label id="lblLifeSales" class="h5 label-display">-</label>
                                                        </div>
                                                    </div>



                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Average Sale</label>
                                                        <div class="col-md-8">
                                                            <label id="lblAverageSales" class="h5 label-display">-</label>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <label class="h5 col-md-4">Last Month Sale</label>
                                                        <div class="col-md-8">
                                                            <label id="lblLastSale" class="h5 label-display">-</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="container-fluid">
                                        <div class="row">
                                           
                                              <h3>Order Summary</h3>
                                            <hr />
                                                <table id="tblOrderSummary" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr>
                                                         <th>Order No</th>
                                                         <th>Order Date</th>
                                                         <th>Bill To Name</th>
                                                         <th>Ship To Name</th>
                                                         <th>Order Total</th>
                                                         </tr>
                                                    </thead>
                                                 </table>
                                           
                                        </div>
                                        </div>
                                    <div class="container-fluid">
                                        <div class="row">
                                            
                                                <h3 >Shopping Cart</h3>
                                            <hr />
                                                <table id="tblCart" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr> 
                                                        <th>Product ID</th>
                                                        <th>Product Name</th>
                                                        <th>Qty</th>
                                                        <th>Price</th>
                                                        <th>Total</th>
                                                       </tr>
                                                    </thead>
                                                    
                                                </table>
                                           
                                        </div>
                                    
                                    </div>
                                    <div class="container-fluid">
                                        <div class="row">
                                           
                                                <h3>Wishlist</h3>
                                                <hr />
                                                <table id="tblWishlist" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr>
                                                         <th>Product ID</th>
                                                         <th>Product Name</th>
                                                         <th>Date Added</th>
                                                         <th>Days In Wishlist</th>
                                                        </tr>
                                                    </thead>
                                                    
                                                </table>
                                            </div>
                                        </div>
                                     
                               </div>
                                <div class="tab-pane fade" id="AddressView">
                                    <div class="col-md-12">
                                        <h4 style="max-width:50%;padding:1%;"><span class="fa fa-crosshairs" style="font-size: 16px;color: #f46f25;"></span><span> </span><span class="Spantitle">Addresses</span></h4>
                                        <hr />
                                       
                                            <div class="col-md-4">

                                                <ul id="addressUL" class="list-unstyled list-group"></ul>
                                            </div>
                                            <div class="col-md-1"></div>
                                            <div class="col-md-7">
                                                @using (Ajax.BeginForm("CustomerAddressInsertUpdate", "Customer", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddressSaveSuccess", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", id = "Addressform" }))

                                             {
                                                    @Html.AntiForgeryToken()
                                                    @*<div class="form-horizontal" id="addressForm">*@
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="Prefix">Prefix</label>
                                                        <div class="col-md-5">

                                                            @Html.EditorFor(model => model.customerAddress.Prefix, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="FirstName">First Name</label>
                                                        <div class="col-md-5">
                                                            @Html.EditorFor(model => model.customerAddress.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.customerAddress.FirstName, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="MidName">Middle Name</label>
                                                        <div class="col-md-5">
                                                            @Html.EditorFor(model => model.customerAddress.MidName, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>

                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="LastName">Last Name</label>
                                                        <div class="col-md-5">

                                                            @Html.EditorFor(model => model.customerAddress.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="Address">Address</label>
                                                        <div class="col-md-5">
                                                            @Html.EditorFor(model => model.customerAddress.Address, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.customerAddress.Address, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="City">City</label>
                                                        <div class="col-md-5">

                                                            @Html.EditorFor(model => model.customerAddress.City, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="Country">Country</label>
                                                        <div class="col-md-5">
                                                            @Html.DropDownListFor(model => model.customerAddress.CountryCode, Model.customerAddress.Countries, "--Select Country--", new { @class = "form-control", id = "CountryCode", value = 0 })

                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="StateProvince">State/Province</label>
                                                        <div class="col-md-5">
                                                            @Html.EditorFor(model => model.customerAddress.StateProvince, new { htmlAttributes = new { @class = "form-control" } })

                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="ContactNo">Contact No</label>
                                                        <div class="col-md-5">

                                                            @Html.EditorFor(model => model.customerAddress.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">

                                                        <label class="control-label col-md-3" for="BillDefaultYN">Is Default Billing Address<span class="required">*</span></label>
                                                        <div class="col-lg-3">
                                                            <div>

                                                                @Html.EditorFor(model => model.customerAddress.BillDefaultYN)
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">

                                                        <label class="control-label col-md-3" for="ShipDefaultYN">Is Default Shipping Address<span class="required">*</span></label>
                                                        <div class="col-lg-3">
                                                            <div>

                                                                @Html.EditorFor(model => model.customerAddress.ShipDefaultYN)
                                                            </div>
                                                        </div>
                                                    </div>


                                                    <div class="form-group" hidden="hidden">
                                                        <div class="col-md-offset-2 col-md-10">
                                                            <input id="btnaddressSubmit" type="submit" value="Create" class="btn btn-default" />
                                                        </div>
                                                    </div>
                                                    @*</div>*@
                                                    @Html.HiddenFor(model => model.ID)
                                                    @Html.HiddenFor(model => model.customerAddress.ID)
                                             }
                                            </div>
                                        
                                    </div>


                                      
                                   





                                </div>
                            </div>
                     </div>
                </div>
            </div>
        </div>
    </div>

</div>


@Html.HiddenFor(model => model.IsActive)
@section Scripts {
    @Scripts.Render("~/bundles/jqueryunobtrusiveajaxvalidate")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/customer")
}