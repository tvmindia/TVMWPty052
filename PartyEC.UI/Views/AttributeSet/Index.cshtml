@model PartyEC.UI.Models.AttributeSetViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container-fluid">
    <div class="panel with-nav-tabs panel-primary">
            <div class="panel-heading">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab1primary" data-toggle="tab">Add Attribute Set</a></li>
                    <li><a href="#tab2primary" data-toggle="tab">Add Attribute Set Details</a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tab1primary">
                        @*table*@
                        <table id="tblAttributeSet" class="table table-striped table-bordered table-hover" cellspacing="0" width="100">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Attribute Set Name</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Attribute Set Name</th>
                                </tr>
                            </tfoot>

                        </table>
                        @*table*@



                    </div>
                    <div class="tab-pane fade" id="tab2primary">
                        @*ButtonPatch*@
                        <div class="col-md-12">
                            <div class="buttonpatch" style="width:273px;float:right;">
                                <a class="facebook" title="Add New" id="btnAddNew"><img src="~/Content/images/add.PNG" /></a>
                                <a class="rss" id="NoticeEdit"><img src="~/Content/images/edit.png" /></a>
                                <a class="twitter" id="btnSave"><img src="~/Content/images/save.png" /></a>
                                <a class="dribble" id="btnReset"><img src="~/Content/images/reset.png" /></a>
                                <a class="rss" id="btnDelete"><img src="~/Content/images/delete.png" /></a>
                                <a class="rss" id="btnNotify" data-toggle="modal"><img src="~/Content/images/notyfi.png" /></a>
                            </div>
                        </div>
                        

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-md-4" id="productUpdateTarget">
                                <h4>Add Attribute Set</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>

                        }
                        <div class="col-lg-6" style="margin-top:2%">
                            <div class="col-lg-6">
                                <div class="panel panel-default panel-info">
                                   
                                    <div class="panel-body" id="jstree_DragUpdate">
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="panel panel-default panel-info">
                                    <div class="panel-body" id="jstree_Drag">
                                       
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                      
                    </div>
                    
                </div>
            </div>
        </div>
 </div>
