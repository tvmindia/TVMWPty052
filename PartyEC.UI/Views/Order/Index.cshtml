@model PartyEC.UI.Models.OrderViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
    @Styles.Render("~/Content/bootstrapdatepicker")

}
<div class="container-fluid">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#taborderListgrid" data-toggle="tab">Orders List</a></li>
                <li><a href="#taborderDetails" data-toggle="tab" id="tabCategoryTable">Order Detail</a></li>
            </ul>
        </div>

        <div class="panel-body">
            <div class="tab-content">
                </div>
            <div class="tab-pane fade in active" id="taborderListgrid">
                <table id="tblOrderList" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Order No</th>
                            <th>Order Date</th>
                            <th>Customer Name</th>
                            <th>Contact No</th>
                            <th>Grand Total</th>
                            <th>Order Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
                </div>
            <div class="tab-pane fade" id="taborderDetails">
                <div class="col-md-12">
                    <h4>Order Detail</h4>
                    <hr />
                    <div class="col-md-2">
                        <div class="panel with-nav-tabs js panel-primary">
                            <div class="panel-heading">
                                <ul class="nav nav-tabs nav-stacked">
                                    <li class="active"><a href="#general" data-toggle="tab" id="tabGeneral">General <span class="label label-danger">E</span></a></li>
                                    <li><a href="#price" data-toggle="tab" id="tabPrice">Price</a></li>
                                    <li><a href="#images" data-toggle="tab" id="tabImages">Images</a></li>
                                </ul>
                            </div>
                        </div>


                    </div>
                    <div class="col-md-8">
                       

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                
                </div>
            </div>
        </div>
@section Scripts {
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/jqueryunobtrusiveajaxvalidate")
    @Scripts.Render("~/bundles/bootstrapdatepicker")
    @Scripts.Render("~/bundles/Order")
}


